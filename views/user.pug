extends layout
mixin navLink(link, name, icon)
    li
        a(href=link class='waves-effect waves-blue navLink')
            i(class='material-icons') #{icon}
            |  #{name}
mixin gridView()
    each val in order
        tr.header.expand(data-key=val.orderId)
          td=val.orderId
          td=val.time
          td=val.description
          td=val.tags
          td=val.shipping
          td=val.juid
          td=val.status
        div.collapsible-body
block content
    .navbar-fixed
        nav
            .nav-wrapper
                ul(class='right hide-on-med-and-down')
                    li
                        a(href='/logout') Выйти
    .row
        div(class='col s3')
            ul#slide-out.side-nav
                +navLink('/users', 'Заказы', 'account_balance_wallet')
                +navLink('#', 'Доставка', 'local_shipping')
                +navLink('#', 'Поломки', 'build')
                +navLink('#', 'Закупки', 'local_shipping')
                +navLink('#', 'Задачи', 'event_available')
                +navLink('#', 'Партнеры', 'person')
                +navLink('#', 'Guide', 'bookmark')
                +navLink('#', 'Контакты', 'contacts')
            a.button-collapse(href='#' data-activates='slide-out')
                i.material-icons menu

            //ul
            //    +navLink('/users', 'Заказы', 'account_balance_wallet')
            //    +navLink('#', 'Доставка', 'local_shipping')
            //    +navLink('#', 'Поломки', 'build')
            //    +navLink('#', 'Закупки', 'local_shipping')
            //    +navLink('#', 'Задачи', 'event_available')
            //    +navLink('#', 'Партнеры', 'person')
            //    +navLink('#', 'Guide', 'bookmark')
            //    +navLink('#', 'Контакты', 'contacts')
        div(class='col s9')
            h4 Добро пожаловать #{username}
            .fixed-action-btn
                a(class='btn-floating btn-large red')
                    i(class='large material-icons') add
                include button-navbar
            table.highlight
                thead
                    tr
                        th Заказ
                        th Срок
                        th Описание
                        th Тег
                        th Доставка
                        th Сумма
                        th Статус
                tbody
                    +gridView
            include modalOrder
            include modalHelpDesk
            include modalShipping
            include modalCustom
            include modalTask